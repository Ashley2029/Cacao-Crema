<script>
/* ---------------------------
   Toggle secciones
   --------------------------- */
function toggle(id){
  const section = document.getElementById(id);
  if(!section) return;
  if(section.style.display === "block"){
    section.style.display = "none";
    section.setAttribute('aria-hidden','true');
  } else {
    // cerrar otras secciones
    document.querySelectorAll('.section').forEach(s => {
      s.style.display = 'none';
      s.setAttribute('aria-hidden','true');
    });
    section.style.display = "block";
    section.style.animation = "slideUp .36s forwards";
    section.setAttribute('aria-hidden','false');
    section.scrollIntoView({behavior:'smooth', block:'center'});
  }
}

/* ---------------------------
   CARRUSEL (flechas + puntos + auto)
   --------------------------- */
let galIndex = 0;
const galImgs = document.querySelectorAll('.carousel-img');
const dots = document.querySelectorAll('.dot');

function showGal(i){
  if(galImgs.length === 0) return;
  galImgs.forEach(img => img.classList.remove('active'));
  dots.forEach(d => d.classList.remove('active'));
  galIndex = (i + galImgs.length) % galImgs.length;
  galImgs[galIndex].classList.add('active');
  if(dots[galIndex]) dots[galIndex].classList.add('active');
}
const nextBtn = document.getElementById('nextBtn');
const prevBtn = document.getElementById('prevBtn');
if(nextBtn) nextBtn.addEventListener('click', ()=> showGal(galIndex+1));
if(prevBtn) prevBtn.addEventListener('click', ()=> showGal(galIndex-1));
dots.forEach((dot, idx) => dot.addEventListener('click', ()=> showGal(idx)));

/* auto slide cada 4s */
let galTimer = setInterval(()=> showGal(galIndex+1), 4000);

/* pausar al entrar y reanudar al salir */
const wrapper = document.querySelector('.carousel-wrapper');
if(wrapper){
  wrapper.addEventListener('mouseenter', ()=> clearInterval(galTimer));
  wrapper.addEventListener('mouseleave', ()=> galTimer = setInterval(()=> showGal(galIndex+1), 4000));
}

/* ---------------------------
   CARRITO: l√≥gica simple (no guarda en servidor)
   --------------------------- */
let cart = {}; // { id: {id, title, price, qty, img} }

function addToCart(id){
  const card = document.querySelector(`.product-card[data-id="${id}"]`);
  if(!card) return;
  const price = parseFloat(card.getAttribute('data-price') || 0);
  const title = card.querySelector('.product-title')?.innerText || id;
  const img = card.querySelector('img')?.getAttribute('src') || '';
  if(cart[id]) cart[id].qty += 1;
  else cart[id] = { id, title, price, qty:1, img };
  renderCart();
  // abrir carrito brevemente
  const overlay = document.getElementById('cartOverlay');
  overlay.style.display = 'flex';
  overlay.setAttribute('aria-hidden','false');
}

function renderCart(){
  const container = document.getElementById('cartItems');
  container.innerHTML = '';
  let total = 0;
  const keys = Object.keys(cart);
  if(keys.length === 0){
    container.innerHTML = '<div style="text-align:center;color:#777; padding:12px;">Tu carrito est√° vac√≠o</div>';
  } else {
    keys.forEach(k=>{
      const it = cart[k];
      total += it.price * it.qty;
      const el = document.createElement('div');
      el.className = 'cart-item';
      el.innerHTML = `
        <img src="${it.img}" alt="${it.title}">
        <div style="flex:1">
          <div style="font-weight:700;color:var(--accent)">${it.title}</div>
          <div style="color:#666;font-size:.92rem">S/ ${it.price.toFixed(2)} x ${it.qty}</div>
        </div>
        <div style="display:flex;flex-direction:column;gap:6px;align-items:center">
          <button class="qty-btn" onclick="changeQty('${k}',1)">Ôºã</button>
          <button class="qty-btn" onclick="changeQty('${k}',-1)">‚àí</button>
        </div>
      `;
      container.appendChild(el);
    });
  }
  const totalEl = document.getElementById('cartTotal');
  if(totalEl) totalEl.innerText = `Total: S/ ${total.toFixed(2)}`;
}

function changeQty(id, delta){
  if(!cart[id]) return;
  cart[id].qty += delta;
  if(cart[id].qty <= 0) delete cart[id];
  renderCart();
}

function toggleCart(){
  const overlay = document.getElementById('cartOverlay');
  if(!overlay) return;
  const isOpen = overlay.style.display === 'flex';
  overlay.style.display = isOpen ? 'none' : 'flex';
  overlay.setAttribute('aria-hidden', isOpen ? 'true' : 'false');
}

function clearCart(){
  cart = {};
  renderCart();
}

function checkout(){
  // ventana simple simulada
  const keys = Object.keys(cart);
  if(keys.length === 0){
    alert('Tu carrito est√° vac√≠o.');
    return;
  }
  let summary = 'Resumen de compra:\n\n';
  let total = 0;
  keys.forEach(k=>{
    const it = cart[k];
    summary += `${it.title} x ${it.qty} ‚Äî S/ ${(it.price * it.qty).toFixed(2)}\n`;
    total += it.price * it.qty;
  });
  summary += `\nTotal: S/ ${total.toFixed(2)}\n\nGracias por elegir Cacao & Crema. Nos pondremos en contacto para coordinar el pago y la entrega. (Simulaci√≥n)`;
  alert(summary);
  clearCart();
  toggleCart();
}

/* inicial render vacio */
renderCart();

/* ---------------------------
   CHATBOT minimal personalizado
   --------------------------- */
const chatBody = document.getElementById('chatBody');
const chatInput = document.getElementById('chatInput');

function toggleChat(){
  const win = document.getElementById('chatWindow');
  if(!win) return;
  const isOpen = win.style.display === 'flex';
  win.style.display = isOpen ? 'none' : 'flex';
  win.setAttribute('aria-hidden', isOpen ? 'true' : 'false');
}

function appendMessage(text, who='bot'){
  const d = document.createElement('div');
  d.className = 'chat-msg ' + (who==='bot' ? 'bot' : 'user');
  d.innerHTML = text;
  chatBody.appendChild(d);
  chatBody.scrollTop = chatBody.scrollHeight;
}

function sendMessage(){
  const txt = chatInput.value.trim();
  if(!txt) return;
  appendMessage(txt, 'user');
  chatInput.value = '';
  const t = txt.toLowerCase();

  setTimeout(()=>{
    if(t.includes('precio') || t.includes('precios') || t.includes('precio?')){
      appendMessage('Nuestros precios est√°n en la secci√≥n <strong>Tienda</strong>. Ejemplos: Brownie S/9, Mousse S/14, Cheesecake S/28. ¬øQuieres que te arme un combo?');
    } else if(t.includes('envio') || t.includes('env√≠os') || t.includes('reparto')){
      appendMessage('Realizamos env√≠os locales en Lima. Env√≠o est√°ndar 2‚Äì5 d√≠as h√°biles. Env√≠o gratuito a partir de S/60. Tambi√©n ofrecemos recojo en tienda (previa coordinaci√≥n).');
    } else if(t.includes('pago') || t.includes('transferencia') || t.includes('metodo')){
      appendMessage('Aceptamos pago por transferencia interbancaria, Yape/Plin y efectivo al recojo. Para pedidos grandes coordinamos 50% de adelanto.');
    } else if(t.includes('personaliz') || t.includes('pedido') || t.includes('evento')){
      appendMessage('Hacemos pedidos personalizados: tortas decoradas, sabores a medida y tama√±os para eventos. Ind√≠canos fecha, tama√±o y estilo y te enviamos presupuesto.');
    } else if(t.includes('horario') || t.includes('hora')){
      appendMessage('Nuestro horario es Lun‚ÄìS√°b de 09:00 a 18:00. Responderemos tus mensajes dentro de ese horario.');
    } else if(t.includes('hola') || t.includes('buenas') || t.includes('hi')){
      appendMessage('¬°Hola! Soy el asistente de Cacao & Crema. Puedo ayudarte con precios, env√≠os, pagos y pedidos personalizados.');
    } else if(t.includes('combo') || t.includes('promocion') || t.includes('promoci√≥n')){
      appendMessage('Actualmente: Env√≠o gratuito por compras desde S/60 y 10% de descuento en combos de 3 productos seleccionados. ¬øQuieres armar uno?');
    } else {
      appendMessage('Lo siento, soy un bot simple. Puedes preguntar por: <em>precios</em>, <em>env√≠o</em>, <em>pago</em>, <em>personalizaci√≥n</em>, o escribir "hablar con humano" para contacto directo.');
    }
  }, 600);
}

